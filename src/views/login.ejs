<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>MBiller</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link rel="shortcut icon" type="image/png" href="../resources/img/favicon-medkit.ico"/>
    <style>
      #bigLogo{
            width:400px;
            height: 150px;
            margin-top: 32px;
        }
        .jumbotron {
            border: 1px solid blue;
            opacity: .9;
        }
        .nav-wrapper {margin: 0 2%;}
        nav {margin-bottom: 40px;}
        body {background: url('../resources/img/stethoscope.jpg');}

    </style>
    <!-- jquery -->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>

</head>
<body>
    <nav class="blue darken-4">
        <div class="nav-wrapper">
            <a href="/home" class="brand-logo"><img src="../resources/img/logo.png"></a>
        </div>
    </nav>
    <div class="container">
        <div class="jumbotron text-center">
        <img id="bigLogo" src="../resources/img/bigLogo.png">
            <h1><span class="fa fa-sign-in"></span> Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group left-align">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group left-align">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group left-align">
                    <label>Remember Me</label>
                    <input type="checkbox" class="form-control" name="remember" value="yes">
                </div>

                <button type="submit" class="btn blue darken-4 wave-effect btn-lg">Login</button>
            </form>

            <hr>

            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
    <script type="text/javascript" src='../resources/js/app.js'></script>
</body>
</html>
